<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_backgroung"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸŒ¾ Step 1: Farmer Input Section -->
        <LinearLayout
            android:id="@+id/inputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="ðŸŒ¾ AI Farming Assistant"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etArea"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Area or City"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/editetextfield"
                android:textColor="@android:color/black"
                android:textColorHint="#999"
                android:elevation="10dp" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date (YYYY-MM-DD)"
                android:inputType="date"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/editetextfield"
                android:textColor="@android:color/black"
                android:textColorHint="#999"
                android:elevation="10dp" />

            <EditText
                android:id="@+id/etVegetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Vegetable Name"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/editetextfield"
                android:textColor="@android:color/black"
                android:textColorHint="#999"
                android:elevation="10dp" />

            <Button
                android:id="@+id/btnFetchWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetch Weather"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/green"
                android:textColor="@android:color/white"
                android:elevation="10dp" />
        </LinearLayout>

        <!-- ðŸŒ¦ï¸ Step 2: Weather Info Section -->
        <LinearLayout
            android:id="@+id/weatherSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¦ï¸ Weather Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- âœ… Horizontal scroll for 6-day weather cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/weatherContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" />
            </HorizontalScrollView>

            <Button
                android:id="@+id/btnGenerateAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate AI Timetable"
                android:layout_marginTop="12dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ðŸ¤– Step 3: AI Result Section -->
        <LinearLayout
            android:id="@+id/aiResultSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– AI Suggested Timetable"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/tvAIResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:padding="8dp"
                    android:background="@drawable/editext" />
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/btnStartProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Progress"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:elevation="12dp" />
    </LinearLayout>


</ScrollView>
