<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_backgroung"
    android:fitsSystemWindows="false"
    tools:context=".weather_page">


    <com.example.agribandhu.FullscreenVideoView
        android:id="@+id/weatherVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:keepScreenOn="true"
        android:focusable="false"
        android:clickable="false" />

    <!-- Main scrollable UI over the video (semi-transparent for readability) -->
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#80000000"
        android:padding="16dp">

        <!-- Root column inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <!-- Input Section -->
            <LinearLayout
                android:id="@+id/inputSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter City"

                    android:inputType="textCapWords"
                    android:layout_marginTop="150dp"
                    android:padding="12dp"
                    android:background="@drawable/editetextfield"
                    android:textColor="@color/purple"
                    android:textColorHint="#9E9E9E"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Date (YYYY-MM-DD)"
                    android:inputType="date"
                    android:padding="12dp"
                    android:background="@drawable/editetextfield"
                    android:textColor="@color/purple"
                    android:textColorHint="#9E9E9E"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnGetWeather"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Get Weather"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- Weather Result Section (hidden initially) -->
            <LinearLayout
                android:id="@+id/weatherResultSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <!-- City & Temp -->
                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24Â°"
                    android:textColor="#FFFFFF"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostly Cloudy"
                    android:textColor="#B0BEC5"
                    android:textSize="18sp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333"
                    android:layout_marginVertical="20dp" />

                <!-- Grid of Weather Info -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="20dp"
                    android:useDefaultMargins="true">

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸ’§ Humidity"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="86%"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Wind -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸŒ¬ Wind"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="5 kph"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Sunrise -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸŒ… Sunrise"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvSunrise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="6:33 am"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Sunset -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸŒ‡ Sunset"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvSunset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="6:01 pm"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Feels Like -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸŒ¡ Feels Like"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvFeelsLike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="24Â°C"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Pressure -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ðŸ§­ Pressure"
                            android:textColor="#B0BEC5"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="1010 hPa"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </GridLayout>

                <!-- Hourly Forecast -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hourly Forecast"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:background="@drawable/card"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/hourlyForecastContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp" />
                </HorizontalScrollView>

            </LinearLayout> <!-- end root LinearLayout inside ScrollView -->

        </LinearLayout>
    </ScrollView> <!-- end ScrollView -->

</FrameLayout> <!-- end FrameLayout -->
